{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
    },
    "tasks": [
        {
            "label": "Start dev",
            "dependsOn": [
                "backend",
                "frontend",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "backend",
            "type": "shell",
            "command": "cd backend && npm install && npm run start",
            "isBackground": true,
            "problemMatcher": [],
        },
        {
            "label": "frontend",
            "type": "shell",
            "command": "cd frontend && npm install && npm run serve",
            "isBackground": true,
            "problemMatcher": [],
        }
    ]
}
